{
  "name": "favorite-properties-graph",
  "version": "1.0.0",
  "description": "Subgraph using Apollo Server.",
  "author": "Core Tech Data Mesh Lab",
  "private": true,
  "scripts": {
    "dev": "nodemon --watch src -e js,ts,ejs --exec npm run dev:all",
    "dev:all": "npm-run-all build start",
    "clean": "rimraf dist/*",
    "babel": "babel src/ --out-dir dist --extensions \".ts,.js\"",
    "codegen": "graphql-codegen --config codegen.yml",
    "build": "npm run codegen && npm run babel",
    "start": "node dist/index.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest --verbose --passWithNoTests",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "lint": "eslint 'src/**/*.{js,ts}' --fix",
    "lint:check": "eslint 'src/**/*.{js,ts}'"
  },
  "dependencies": {
    "@apollo/datasource-rest": "^6.2.2",
    "@apollo/server": "^4.9.5",
    "@apollo/subgraph": "^2.9.3",
    "@escape.tech/graphql-armor": "^3.1.5",
    "@zillow/zgcp-node-service-base": "^3.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.12.6",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.9",
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-typescript": "^7.23.3",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/schema-ast": "^4.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/node-fetch": "^2.6.9",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "express": "^4.18.2",
    "jest": "^29.7.0",
    "nock": "^13.4.0",
    "nodemon": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:coverage"
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-typescript"
    ]
  }
}
